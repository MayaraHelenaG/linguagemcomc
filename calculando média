#include 	<stdio.h>
#include <conio.h>	

		int main (){
			//Declaração das variáveis
			float nota1, nota2, media;
			int i; 
			
			printf("---- Calculando a media para 10 alunos ----\n\n");
			
			//Entrada de dados
			for (i= 1; i<=10; i++){
				printf("Digite a primeira nota do aluno %d\n",i);
				scanf("%f",&nota1);
				
				printf("Digite a segunda nota do aluno %d\n", i);
				scanf("%f", &nota2);
				
				//Processamento
				media = (nota1 + nota2) / 2;
				
				//Saída 
				printf("\nMedia do aluno %d = %.1f\n", 1, media);
				printf("----------------------------------------------\n\n");
				
			}
			getch ();
			return (0);
			
		}
